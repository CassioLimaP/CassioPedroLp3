<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" alignment="CENTER" prefHeight="300.0" prefWidth="350.0" spacing="15.0"
      styleClass="aeroporto-imagem-janela,janela-com-fundo" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vendadepassagens.controller.TelaReservarPassagemController">

    <stylesheets>
        <String fx:value="/com/vendadepassagens/css/style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Confirmar Reserva">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Label fx:id="infoVooLabel" text="Voo: G3-1001 (SP -&gt; RJ)" wrapText="true" />

    <Label text="Digite o assento (ex: 14A):" />
    <TextField fx:id="assentoField" maxWidth="100.0" promptText="Assento" />

    <Button fx:id="confirmarButton" onAction="#handleConfirmarReservaAction" text="Confirmar Reserva" />

    <Label fx:id="mensagemLabel" />
    <Button fx:id="cancelar" mnemonicParsing="false" onAction="#handleCancelarReservaAction" text="cancelar" />
</VBox>
